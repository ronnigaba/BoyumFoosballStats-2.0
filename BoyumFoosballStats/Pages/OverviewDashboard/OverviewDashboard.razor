@page "/OverviewDashboard"
<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-5">
    <MudGrid>
        <MudItem xs="6">
            <MudPaper Elevation="3">
                @if (ViewModel.WinRateMatchData.Any())
                {
                    <RadzenChart>
                        <RadzenBarSeries Data="@ViewModel.WinRateMatchData" CategoryProperty="PlayerName" Title="Win Rate" ValueProperty="WinRate"
                                         Fills="ViewModel.FillColors">
                            <RadzenSeriesDataLabels Visible="false"/>
                            <RadzenColumnOptions Margin="0"/>
                        </RadzenBarSeries >
                        <RadzenLegend Visible="false"/>
                        <RadzenCategoryAxis>
                            <RadzenAxisTitle Text="Player"/>
                        </RadzenCategoryAxis>
                        <RadzenValueAxis Formatter="(percentage) => percentage.ToPercentageString()">
                            <RadzenGridLines Visible="true"/>
                            <RadzenAxisTitle Text="Win Rate (%)"/>
                        </RadzenValueAxis>
                    </RadzenChart>
                }
            </MudPaper>
        </MudItem>
        <MudItem xs="6">
            <MudPaper Elevation="3">
                @if (ViewModel.MatchesPlayedMatchData.Any())
                {
                    <RadzenChart>
                        <RadzenBarSeries Data="@ViewModel.MatchesPlayedMatchData" CategoryProperty="PlayerName" Title="Matches Played" ValueProperty="MatchesPlayed"
                                         Fills="ViewModel.FillColors">
                            <RadzenSeriesDataLabels Visible="false"/>
                            <RadzenColumnOptions Margin="0"/>
                        </RadzenBarSeries >
                        <RadzenLegend Visible="false"/>
                        <RadzenCategoryAxis>
                            <RadzenAxisTitle Text="Player"/>
                        </RadzenCategoryAxis>
                        <RadzenValueAxis>
                            <RadzenGridLines Visible="true"/>
                            <RadzenAxisTitle Text="Matches Played"/>
                        </RadzenValueAxis>
                    </RadzenChart>
                }
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>