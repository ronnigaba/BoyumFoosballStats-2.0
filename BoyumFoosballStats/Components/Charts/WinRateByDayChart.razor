@inherits ChartComponentBase

<RadzenChart Style="height: 250px;">
    <RadzenColumnSeries Data="Data" CategoryProperty="@nameof(ChartDataItem.XData)" ValueProperty="@nameof(ChartDataItem.YData)" Title="Win Rate">
        <ChildContent>
            <RadzenSeriesDataLabels Visible="false"/>
        </ChildContent>
        <TooltipTemplate>
            <MudText Typo="Typo.body2">@FormatAsFullDayName(context.XData)</MudText>
            <MudText Typo="Typo.body2">
                Win rate: <b>@FormatAsPercentage(context.YData)</b>
            </MudText>
        </TooltipTemplate>
    </RadzenColumnSeries>
    <RadzenValueAxis Formatter="@FormatAsPercentage" Step="0.25" Min="0" Max="1">
        <RadzenGridLines Visible="true"/>
    </RadzenValueAxis>
    <RadzenCategoryAxis Formatter="@FormatAsShortDayName">
    </RadzenCategoryAxis>
    <RadzenLegend Visible="false"/>
</RadzenChart>