@inherits ChartComponentBase

<RadzenChart Style="height: 250px;">
    <RadzenLineSeries Smooth="true" Data="Data" CategoryProperty="@nameof(ChartDataItem.XData)" ValueProperty="@nameof(ChartDataItem.YData)" Title="Matches">
        <ChildContent>
            <RadzenMarkers MarkerType="MarkerType.Circle"/>
            <RadzenSeriesDataLabels Visible="false"/>
        </ChildContent>
        <TooltipTemplate>
            <MudText Typo="Typo.body2">@FormatAsWeekRange(context.XData)</MudText>
            <MudText Typo="Typo.body2">
                Matches: <b>@context.YData</b>
            </MudText>
        </TooltipTemplate>
    </RadzenLineSeries>
    <RadzenValueAxis>
        <RadzenGridLines Visible="true"/>
    </RadzenValueAxis>
    <RadzenCategoryAxis Formatter="@FormatAsWeekNumber">
        <RadzenAxisTitle Text="Week"/>
    </RadzenCategoryAxis>
    <RadzenLegend Visible="false"/>
</RadzenChart>